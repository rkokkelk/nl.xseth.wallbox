{
  "id": "nl.phate.goecharger",
  "version": "0.3.7",
  "compatibility": ">=1.5.0",
  "sdk": 2,
  "name": {
    "en": "Go-e Charger"
  },
  "brandColor": "#007bff",
  "description": {
    "en": "Adds support for the Go-e car Charger"
  },
  "category": [
    "energy"
  ],
  "permissions": [],
  "images": {
    "large": "/assets/images/large.png",
    "small": "/assets/images/small.png"
  },
  "author": {
    "name": "Tim Willemsen",
    "email": "tim.willemsen@gmail.com"
  },
  "bugs": {
  "url": "https://github.com/phatenl/nl.phate.goecharger"
  },
  "homeyCommunityTopicId": 14162,
  "contributors": {
    "developers": [
      {
        "name": "phatenl",
        "github": "https://github.com/phatenl/"
      }
    ]
  },
  "contributing": {
    "donate": {
      "paypal": {
        "username": "TimWillemsen"
      }
    }
  },
  "flow" : {
    "triggers": [
      {
            "id": "charging_finished",
            "title": {
              "en": "Finished charging",
              "nl": "Laden afgerond"
            }
      },
      {
            "id": "charging_ended",
            "title": {
              "en": "Charging ended",
              "nl": "Laden beÃ«indigd"
            }
      },
      {
            "id": "charging_started",
            "title": {
              "en": "Charging started",
              "nl": "Laden gestart"
            }
      },
      {
            "id": "car_connected",
            "title": {
              "en": "Car connected",
              "nl": "Auto verbonden"
            }
      },
      {
            "id": "car_unplugged",
            "title": {
              "en": "Car unplugged",
              "nl": "Auto ontkoppeld"
            }
      },
      {
            "id": "charging_allowed",
            "title": {
              "en": "Charging allowed",
              "nl": "Opladen toegestaan"
            }
      },
      {
            "id": "charging_disallowed",
            "title": {
              "en": "Charging disallowed",
              "nl": "Opladen niet meer toegestaan"
            }
      },
      {
            "id": "status_changed",
            "title": {
              "en": "Status changed",
              "nl": "Status gewijzigd"
            }
      }
    ],
    "conditions" : [
      {
            "id": "is_finished",
            "title": {
              "en": "!{{Finished charging|Not finished charging}}",
              "nl": "!{{Laden afgerond|Laden niet afgerond}}"
            }
      },
      {
            "id": "is_charging",
            "title": {
              "en": "!{{Charging|Not charging}}",
              "nl": "!{{Bezig met laden|Niet bezig met laden}}"
            }
      },
      {
            "id": "is_allowed",
            "title": {
              "en": "!{{Charging allowed|Charging not allowed}}",
              "nl": "!{{Laden toegestaan|Laden niet toegestaan}}"
            }
      },
      {
            "id": "is_plugged",
            "title": {
              "en": "!{{Car plugged in|No car plugged in}}",
              "nl": "!{{Auto verbonden|Geen auto verbonden}}"
            }
      }
    ],
    "actions" : [
      {
            "id": "Allow_charging",
            "title": {
              "en": "Allow charging",
              "nl": "Laden toestaan"
            }
      },
      {
            "id": "Stop_charging",
            "title": {
              "en": "Stop charging",
              "nl": "Laden stoppen"
            }
      },
      {
            "id": "Change_amps_to",
            "title": {
              "en": "Change amperage to...",
              "nl": "Amperage veranderen naar..."
            },
            "titleformatted": {
              "en": "Change amperage to [[amps]]",
              "nl": "Amperage veranderen naar [[amps]]"
            },
            "args": [
              {
                "type": "range",
                "name": "amps",
                "min": 6,
                "max": 32,
                "step": 1,
                "label": "A",
                "labelMultiplier": 1,
                "labelDecimals": 0
              }
            ]
      }
    ]
  },
  "capabilities": {
    "finished": {
      "type": "boolean",
      "title": {
        "en": "Charging finished",
        "nl": "Laden afgerond"
      },
      "getable": true,
      "setable": false,
      "uiComponent": null,
      "insights": false
    },
    "pluggedin": {
      "type": "boolean",
      "title": {
        "en": "Car plugged in",
        "nl": "Auto verbonden"
      },
      "getable": true,
      "setable": false,
      "uiComponent": null,
      "insights": false
    },
    "charging": {
      "type": "boolean",
      "title": {
        "en": "Charging",
        "nl": "Laden"
      },
      "getable": true,
      "setable": false,
      "uiComponent": null,
      "insights": false
    },
    "onoff": {
      "type": "boolean",
      "title": {
        "en": "Charging allowed",
        "nl": "Laden toegestaan"
      },
      "getable": true,
      "setable": true,
      "uiQuickAction": true,
      "icon": "/assets/icon.svg",
      "insights": false
    },
    "old_onoff": {
      "type": "boolean",
      "title": {
        "en": "Charging allowed",
        "nl": "Laden toegestaan"
      },
      "getable": false,
      "setable": false,
      "uiQuickAction": false,
      "uiComponent": null,
      "icon": "/assets/icon.svg",
      "insights": false
    },
    "measure_power": {
      "type": "number",
      "title": {
        "en": "Current Power Supplied",
        "nl": "Actueel wattage"
      },
      "getable": true,
      "setable": false,
      "units": {
        "en": "W"
      },
      "min": 0,
      "max": 22000,
      "icon": "/assets/icon.svg",
      "insights": true
    },
    "measure_current": {
      "type": "number",
      "title": {
        "en": "Current Amperage Supplied",
        "nl": "Actueel amperage"
      },
      "getable": true,
      "setable": false,
      "units": {
        "en": "A"
      },
      "min": 0,
      "max": 100,
      "icon": "/assets/icon.svg",
      "insights": true
    },
    "measure_voltage": {
      "type": "number",
      "title": {
        "en": "Current Voltage Supplied",
        "nl": "Actueel voltage"
      },
      "getable": true,
      "setable": false,
      "units": {
        "en": "V"
      },
      "min": 0,
      "max": 750,
      "icon": "/assets/icon.svg",
      "insights": true
    },
    "measure_temperature": {
      "type": "number",
      "title": {
        "en": "Temperature",
        "nl": "Temperatuur"
      },
      "getable": true,
      "setable": false,
      "units": {
        "en": "C"
      },
      "min": -50,
      "max": 50,
      "icon": "/assets/icon.svg",
      "insights": true
    },
    "meter_power": {
      "type": "number",
      "title": {
        "en": "Power supplied in this session",
        "nl": "Vermogen in deze laadsessie geleverd"
      },
      "getable": true,
      "setable": false,
      "units": {
        "en": "kWh"
      },
      "icon": "/assets/icon.svg",
      "insights": true
    },
    "charge_amp": {
      "type": "number",
      "title": {
        "en": "Maximum power from source available for charging",
        "nl": "Maximaal bronvermogen beschikbaar voor laden"
      },
      "getable": true,
      "setable": false,
      "units": {
        "en": "A"
      },
      "min": 6,
      "max": 32,
      "icon": "/assets/icon.svg",
      "insights": true
    },
    "charge_amp_limit": {
      "type": "number",
      "title": {
        "en": "Maximum power as set in the device's app",
        "nl": "Maximaal vermogen zoals ingesteld in de app van het apparaat"
      },
      "getable": true,
      "setable": false,
      "units": {
        "en": "A"
      },
      "icon": "/assets/icon.svg",
      "insights": true
    },
    "status": {
      "type": "enum",
      "title": {
        "en": "Device status",
        "nl": "Status van het apparaat"
      },
      "desc": {
