      "getable": true,
      "setable": false,
      "uiComponent": null,
      "units": {
        "en": "kWh"
      },
      "icon": "/assets/icon.svg",
      "insights": true
    }
  },
  "drivers": [
    {
      "id": "go-e_charger_home_plus",
      "name": {
        "en": "Go-e Charger Home+"
      },
      "class": "socket",
      "capabilities": [
        "finished",
        "charging",
        "onoff",
        "old_onoff",
        "measure_power",
        "measure_current",
        "measure_voltage",
        "measure_temperature",
